<h3>
	<a href="#">
		<%= method_name %>
		<span>
			<% if winners.length == 1 %>
				<%= winners[0] %>
			<% else %>
				Tie between <%= terms(winners,", "," and ") %>
			<% end %>
			
			<% unless warnings.nil? %>
				(with a warning)
			<% end %>

			<% unless defined?(message).nil? %>
				(<%= message %>)
			<% end %>
		</span>
	</a>
</h3>
